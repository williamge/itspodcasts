extends layout

block content

    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js', type='text/javascript')
    script(src='/javascripts/main.js', type='text/javascript')

    .angular-area(ng-app='main')
        .applied-filters(ng-controller='appliedFilters')
            a.btn(ng-click='clearFilters()', ng-show='filtersApplied()') Remove all filters
            ul
                li.btn(ng-repeat='filter in filters.currentFilters()')
                    a {{filter.description}}
                    a.btn(
                        ng-click='removeFilter(this.filter)'
                    ) x
        episode-list

