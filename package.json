{
  "name": "itspodcasts",
  "description": "A website and scraper for podcasts.",
  "version": "0.0.2",
  "author": "williamg",
  "repository": {
    "type": "git",
    "url": "http://github.com/williamge/itspodcasts.git"
  },
  "engines": {
    "node": "0.10.x"
  },
  "private": true,
  "scripts": {
    "test": "mocha test",
    "test.cov": "mocha -r jscoverage --covout=html --covinject=true test",
    "test.cov.istanbul": "istanbul cover _mocha -- -R spec",
    "scraper": "node scraper/index.js",
    "build:web:public:ts" : "tsc -m commonjs web/public/javascripts/main.ts",
    "build:web:ts" : "tsc --module commonjs web/app.ts",
    "build:web" : "npm run build:web:public:ts && npm run build:web:ts",
    "build:scraper:ts" : "tsc --module commonjs scraper/index.ts",
    "build:scraper" : "npm run build:scraper:ts",
    "postinstall": "npm run build:web && npm run build:scraper",
    "web": "node web/app.js"
  },
  "dependencies": {
    "async": "~0.9.0",
    "cheerio": "~0.17.0",
    "express": "~3.4.8",
    "jade": "*",
    "lodash": "~2.4.1",
    "minimist": "~0.2.0",
    "mongodb": "~1.4.4",
    "mongoose": "~3.8.12",
    "request": "~2.36.0",
    "string": "~2.1.0",
    "typescript": "^1.5.0-beta",
    "winston": "~0.7.3",
    "xml2js": "~0.4.3"
  },
  "devDependencies": {
    "chai": "*",
    "mocha": "~1.19.0",
    "grunt-jsbeautifier": "~0.2.7",
    "grunt": "~0.4.5",
    "grunt-githooks": "~0.3.1",
    "grunt-contrib-jshint": "~0.10.0",
    "jscoverage": "~0.5.4",
    "sinon": "~1.10.2",
    "grunt-contrib-watch": "~0.6.1"
  }
}
